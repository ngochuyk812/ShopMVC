@model LoginViewModel
<div class="container-fluid">
    <div class="row">
        @if (ViewBag.Error != null)
        {
            <p>@ViewBag.Error</p>
        }
        @if (TempData["Success"] != null)
        {
            <p>@TempData["Success"]</p>
        }
        <form asp-controller="Account" asp-action="Login" method="post" class="form">
            <input type="hidden" name="requestpath" id="requestpath" value="@Model?.RequestPath" />
            <div class="form-group">
                <input class="form-control" type="text" name="email" value="@Model?.Email" id="email" />
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="password" value="@Model?.Password" id="password" />
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Login" />
            </div>
        </form>
    </div
